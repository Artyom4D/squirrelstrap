// Links

link-color = #1978c8;
visited-color = #8c5ad2;
hover-color = #1694ec;
active-color = #fff  // Active navigation item
{% if (linkDecor == 'border') { %}link-underline-color = hsla(link-color,.4);
visited-underline-color = hsla(visited-color,.4);
hover-underline-color = hsla(active-color,.4);{% } %}

a {
	{% if (linkDecor == 'border') { %}text-decoration:none;
	border-bottom-width:1px;
	border-bottom-style:solid;{% } else { %}
	text-decoration:underline;{% } %}
	transition:border .1s ease-in-out, color .2s ease-in-out, background .2s ease-in-out;
}
a.fake {
	{% if (linkDecor == 'underline') { %}border-bottom-width:1px;{% } %}
	border-bottom-style:dotted;
}
a:link, nav a:visited, a.fake:visited {
	color:link-color;
	{% if (linkDecor == 'border') { %}border-bottom-color:link-underline-color;{% } %}
}
a:visited {
	color:visited-color;
	{% if (linkDecor == 'border') { %}border-bottom-color:visited-underline-color;{% } %}
}
a:active {
	position:relative;
	top:1px;
}
a:hover, a:active, nav a:hover, nav a:active, a.fake:hover, a.fake:active {
	color:hover-color;
	{% if (linkDecor == 'border') { %}border-bottom-color:hover-underline-color;
	border-bottom-width:2px;{% } %}
}
// Active navigation items
.active, a.active:link, a.active:visited {
	background:link-color;
	color:active-color;
	{% if (linkDecor == 'underline') { %}text-decoration:none;{% } else { %}
	border-bottom:none;{% } %}
}
a.active:hover, a.active:active {
	background:hover-color;
}


// Text selection
text-selection(#000, #faedb1);

// iOS tap highlighting: j.mp/webkit-tap-highlight-color
a:link {
	-webkit-tap-highlight-color:#ff5e99;
}


/* Helper Classes */

// Text without line breaks
.nobr { white-space:nowrap; }

// Numbers with smaller spaces:1 000 000
.number {
	word-spacing:-0.25ex;
	white-space:nowrap;
}
